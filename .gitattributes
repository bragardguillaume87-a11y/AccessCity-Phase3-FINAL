# Default: normalize to LF on commit
* text=auto eol=lf

# Source code - always LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.html text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.prettierrc text eol=lf
.eslintrc text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.woff binary
*.woff2 binary
*.ttf binary
