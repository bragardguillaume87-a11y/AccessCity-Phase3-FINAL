{
  "scenes": [
    {
      "id": "scene_test_01",
      "title": "Rencontre Mairie",
      "description": "Premiere scene de test avec variables.",
      "dialogues": [
        {
          "speaker": "narrator",
          "text": "Vous arrivez devant l'imposant batiment de la mairie."
        },
        {
          "speaker": "counsellor",
          "text": "Bonjour ! Je suis ravi de vous voir pour discuter du projet d'accessibilite."
        },
        {
          "speaker": "player",
          "text": "...",
          "choices": [
            {
              "text": "Bonjour, je suis tres motive !",
              "effects": [
                { "variable": "Empathie", "value": 60, "operation": "set" }
              ]
            },
            {
              "text": "Je n'ai pas beaucoup de temps.",
              "effects": [
                { "variable": "Empathie", "value": 40, "operation": "set" }
              ]
            }
          ]
        },
        {
          "speaker": "counsellor",
          "text": "C'est formidable de sentir votre enthousiasme !",
          "conditions": [
            { "variable": "Empathie", "operator": ">=", "value": 60 }
          ]
        },
        {
          "speaker": "counsellor",
          "text": "Tres bien, nous allons faire vite alors.",
          "conditions": [
            { "variable": "Empathie", "operator": "<", "value": 60 }
          ]
        },
        {
          "speaker": "narrator",
          "text": "Apres l'entretien, vous retournez a votre vehicule."
        },
        {
          "speaker": "player",
          "text": "J'espere que ma place est toujours libre...",
          "choices": [
            {
              "text": "Verifier le parking (Test de Chance)",
              "effects": [
                { "variable": "parking_luck", "operation": "random", "min": 0, "max": 100 }
              ]
            }
          ]
        },
        {
          "speaker": "narrator",
          "text": "Vous avez de la chance ! Une place PMR est libre juste devant.",
          "conditions": [
            { "variable": "parking_luck", "operator": ">=", "value": 50 }
          ],
          "effects": []
        },
        {
          "speaker": "player",
          "text": "Super ! Ca me remonte le moral.",
          "conditions": [
            { "variable": "parking_luck", "operator": ">=", "value": 50 }
          ],
          "choices": [
             { 
               "text": "Continuer", 
               "effects": [{ "variable": "Moral", "operation": "add", "value": 10 }] 
             }
          ]
        },
        {
          "speaker": "narrator",
          "text": "Malheureusement, toutes les places sont prises...",
          "conditions": [
            { "variable": "parking_luck", "operator": "<", "value": 50 }
          ]
        },
        {
          "speaker": "player",
          "text": "C'est epuisant...",
          "conditions": [
            { "variable": "parking_luck", "operator": "<", "value": 50 }
          ],
          "choices": [
             { 
               "text": "Continuer", 
               "effects": [
                   { "variable": "Moral", "operation": "add", "value": -10 },
                   { "variable": "Physique", "operation": "add", "value": -5 }
               ] 
             }
          ]
        }
      ]
    }
  ]
}