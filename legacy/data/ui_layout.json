{
  "version": "2.0.0",
  "defaultLayout": "standard",
  "layouts": {
    "standard": {
      "description": "Disposition editeur complete : liste, inspecteur et DevTools visibles",
      "panels": [
        { "id": "scene-list", "visible": true, "position": "left", "width": 260 },
        { "id": "inspector", "visible": true, "position": "center", "flex": 1 },
        { "id": "devtools", "visible": true, "position": "right", "width": 320 },
        { "id": "dialogues", "visible": false, "position": "bottom", "height": 220 },
        { "id": "character-portrait-left", "visible": false, "position": "bottom-left" },
        { "id": "character-portrait-right", "visible": false, "position": "bottom-right" },
        { "id": "dialogue-area", "visible": false, "position": "bottom-center" }
      ]
    },
    "focus": {
      "description": "Mode focus sur l'ecriture : inspector occupe tout l'espace",
      "panels": [
        { "id": "scene-list", "visible": false, "position": "left", "width": 0 },
        { "id": "inspector", "visible": true, "position": "center", "flex": 1 },
        { "id": "devtools", "visible": true, "position": "right", "width": 280 },
        { "id": "dialogues", "visible": false, "position": "bottom", "height": 220 },
        { "id": "character-portrait-left", "visible": false, "position": "bottom-left" },
        { "id": "character-portrait-right", "visible": false, "position": "bottom-right" },
        { "id": "dialogue-area", "visible": false, "position": "bottom-center" }
      ]
    },
    "accessibility": {
      "description": "Mode accessibilite : colonnes larges, contraste eleve, DevTools caches",
      "panels": [
        { "id": "scene-list", "visible": true, "position": "left", "width": 300 },
        { "id": "inspector", "visible": true, "position": "center", "flex": 1 },
        { "id": "devtools", "visible": false, "position": "right", "width": 0 },
        { "id": "dialogues", "visible": false, "position": "bottom", "height": 260 },
        { "id": "character-portrait-left", "visible": false, "position": "bottom-left" },
        { "id": "character-portrait-right", "visible": false, "position": "bottom-right" },
        { "id": "dialogue-area", "visible": false, "position": "bottom-center" }
      ]
    },
    "devtools": {
      "description": "Mode debug narratif : DevTools large et dialogues visibles",
      "panels": [
        { "id": "scene-list", "visible": true, "position": "left", "width": 220 },
        { "id": "inspector", "visible": true, "position": "center", "flex": 1 },
        { "id": "devtools", "visible": true, "position": "right", "width": 380 },
        { "id": "dialogues", "visible": true, "position": "bottom", "height": 260 },
        { "id": "character-portrait-left", "visible": false, "position": "bottom-left" },
        { "id": "character-portrait-right", "visible": false, "position": "bottom-right" },
        { "id": "dialogue-area", "visible": false, "position": "bottom-center" }
      ]
    },
    "narrative": {
      "description": "Mode lecture : interface scenariste masquee, portraits et bulles visibles",
      "panels": [
        { "id": "scene-list", "visible": false, "position": "left" },
        { "id": "inspector", "visible": false, "position": "center" },
        { "id": "devtools", "visible": false, "position": "right" },
        { "id": "dialogues", "visible": false, "position": "bottom" },
        { "id": "character-portrait-left", "visible": true, "position": "bottom-left" },
        { "id": "character-portrait-right", "visible": true, "position": "bottom-right" },
        { "id": "dialogue-area", "visible": true, "position": "bottom-center", "width": 800, "height": 250 }
      ]
    }
  }
}